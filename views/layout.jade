doctype html
html(lang="en")

	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width,initial-scale=1.0")
		title Matthias Beitl
		meta(name="description" content="Virtual home sweet home of web developer Matthias Beitl. His brain waves broadcast from Vienna, Austria.")
		block icons
			link(rel="icon", sizes="16x16", href="/favicon.ico")
			link(rel="icon", type="image/jpeg", sizes="300x300", href="/photo.jpg")
			link(rel="apple-touch-icon", href="/photo.jpg")
		block stylesheets
			if verbose
				link(rel="stylesheet", href="/style.css")
			else
				style
					include ../build/style.min.css

	body
		main.vcard(role="main")
			#profile
				.url
					a(rel="home", href="http://matthias.beitl.net/")
						i http://
						| matthias.beitl.net
						i /
				.photo
					img(alt="", src="photo.jpg")
				h1.fn Matthias Beitl
				h2.category Web Developer
				.adr
					a(href="https://maps.google.com/maps?q=vienna+austria")
						span.locality Vienna
						| , 
						span.country-name Austria
			#about
				h3.print About
				p.note
					| Matthias Beitl is a front-end web craftsman who indulges Cascading Style Sheets and their friends. If you are into 
					a(rel="me", href="https://github.com/cssence") coding
					|  you will find him as 
					a(rel="me", href="https://twitter.com/cssence") @cssence
					|  on 
					a(rel="me", href="http://cssence.com/") The&nbsp;Internets
					| .
		block errors
		nav(role="navigation")
			h3.print On the web
			ul
				li
					a.blog(rel="me", href="http://cssence.com/")
						include ../static/icon-home.svg
						|  Website 
						b cssence.com
				li
					a.twitter(rel="me", href="https://twitter.com/cssence")
						include ../static/icon-twitter.svg
						|  Twitter 
						b @cssence
				li
					a.github(rel="me", href="https://github.com/cssence")
						include ../static/icon-github.svg
						|  github 
						b /cssence
				li
					a.googleplus(rel="me", href="https://google.com/+MatthiasBeitl-cssence")
						include ../static/icon-googleplus.svg
						|  google+ 
						b +MatthiasBeitl<small>-cssence</small>
				li
					a.xing(rel="me", href="https://www.xing.com/profile/Matthias_Beitl")
						include ../static/icon-xing.svg
						|  xing 
						b /Matthias_Beitl
				li
					a.linkedin(rel="me", href="https://at.linkedin.com/in/matthiasbeitl")
						include ../static/icon-linkedin.svg
						|  Linked&#x200A;in 
						b <small>at&hellip;</small>/matthiasbeitl
				li
					a(rel="home", href="http://matthias.beitl.net/")
						include ../static/icon-profile.svg
						|  vCard 
						b matthias.beitl.net
		footer(role="contentinfo")
